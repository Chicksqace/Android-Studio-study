<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2d9"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txt1"
    android:layout_marginTop="10dp"
    android:textSize="18sp"
    android:textColor="#0000ff"
    android:singleLine="true"
    android:ellipsize="start"
    android:text="1111111111111111111111111111111111111111111111111111111111111111111111"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#0000ff"
        android:singleLine="true"
        android:ellipsize="middle"
        android:text="1111111111111111111111111111111111111111111111111111111111111111111111"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt3"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#0000ff"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="1111111111111111111111111111111111111111111111111111111111111111111111"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="#0000ff"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="18sp" />
</LinearLayout>